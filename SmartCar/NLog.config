<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs/internal-nlog.txt">

  <extensions>
    <add assembly="NLog.Extensions.Logging"/>
  </extensions>

  <targets>
    <!-- Console target with color coding -->
    <target xsi:type="ColoredConsole" name="console"
            layout="${longdate} [${level:uppercase=true}] ${logger:shortName=true} - ${message} ${exception:format=tostring}">
      <highlight-row condition="level == LogLevel.Debug" foregroundColor="Gray" />
      <highlight-row condition="level == LogLevel.Info" foregroundColor="White" />
      <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
      <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
      <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
    </target>

    <!-- File target for all logs -->
    <target xsi:type="File" name="allfile"
            fileName="logs/smartcar-${shortdate}.log"
            layout="${longdate} [${level:uppercase=true}] ${logger} - ${message} ${exception:format=tostring}"
            archiveEvery="Day"
            archiveNumbering="Date"
            maxArchiveFiles="7" />

    <!-- File target for errors only -->
    <target xsi:type="File" name="errorfile"
            fileName="logs/errors-${shortdate}.log"
            layout="${longdate} [${level:uppercase=true}] ${logger} - ${message} ${exception:format=tostring}"
            archiveEvery="Day"
            archiveNumbering="Date"
            maxArchiveFiles="30" />

    <!-- File target for racing wheel debugging -->
    <target xsi:type="File" name="wheelfile"
            fileName="logs/racingwheel-${shortdate}.log"
            layout="${longdate} [${level:uppercase=true}] - ${message}"
            archiveEvery="Day"
            archiveNumbering="Date"
            maxArchiveFiles="7" />
  </targets>

  <rules>
    <!-- All logs to console -->
    <logger name="*" minlevel="Info" writeTo="console" />

    <!-- All logs to file -->
    <logger name="*" minlevel="Debug" writeTo="allfile" />

    <!-- Errors to separate file -->
    <logger name="*" minlevel="Error" writeTo="errorfile" />

    <!-- Racing wheel logs to separate file for debugging -->
    <logger name="SmartCar.RacingWheelController" minlevel="Debug" writeTo="wheelfile" />
    <logger name="SmartCar.JoystickController" minlevel="Debug" writeTo="wheelfile" />
  </rules>
</nlog>
