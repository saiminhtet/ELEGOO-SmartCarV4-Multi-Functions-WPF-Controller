<Window x:Class="SmartCarExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ELEGOO Smart Car V4 Controller"
        Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        Focusable="True">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="ELEGOO Smart Car V4 Controller"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#4EC9B0"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Controls Info -->
        <Border Grid.Row="1"
                BorderBrush="#333"
                BorderThickness="1"
                CornerRadius="5"
                Background="#252526"
                Padding="20">
            <StackPanel>
                <TextBlock Text="Keyboard Controls:"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#DCDCAA"
                           Margin="0,0,0,15"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Margin="0,5">
                            <Run Text="W" FontWeight="Bold" Foreground="#569CD6"/>
                            <Run Text=" - Forward" Foreground="#D4D4D4"/>
                        </TextBlock>
                        <TextBlock Margin="0,5">
                            <Run Text="S" FontWeight="Bold" Foreground="#569CD6"/>
                            <Run Text=" - Backward" Foreground="#D4D4D4"/>
                        </TextBlock>
                        <TextBlock Margin="0,5">
                            <Run Text="A" FontWeight="Bold" Foreground="#569CD6"/>
                            <Run Text=" - Turn Left" Foreground="#D4D4D4"/>
                        </TextBlock>
                        <TextBlock Margin="0,5">
                            <Run Text="D" FontWeight="Bold" Foreground="#569CD6"/>
                            <Run Text=" - Turn Right" Foreground="#D4D4D4"/>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Margin="0,5">
                            <Run Text="[" FontWeight="Bold" Foreground="#569CD6"/>
                            <Run Text=" - Camera Left" Foreground="#D4D4D4"/>
                        </TextBlock>
                        <TextBlock Margin="0,5">
                            <Run Text="]" FontWeight="Bold" Foreground="#569CD6"/>
                            <Run Text=" - Camera Right" Foreground="#D4D4D4"/>
                        </TextBlock>
                        <TextBlock Margin="0,5">
                            <Run Text="V" FontWeight="Bold" Foreground="#569CD6"/>
                            <Run Text=" - Toggle Video" Foreground="#D4D4D4"/>
                        </TextBlock>
                        <TextBlock Margin="0,5">
                            <Run Text="Esc" FontWeight="Bold" Foreground="#569CD6"/>
                            <Run Text=" - Quit" Foreground="#D4D4D4"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Connection Status -->
        <Border Grid.Row="2"
                Background="#252526"
                BorderBrush="#333"
                BorderThickness="1"
                CornerRadius="5"
                Padding="15"
                Margin="0,20,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Connection Status (Top Left) -->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,5">
                    <Ellipse x:Name="ConnectionIndicator"
                             Width="12"
                             Height="12"
                             Fill="#F44747"
                             Margin="0,0,8,0"/>
                    <TextBlock x:Name="ConnectionStatus"
                               Text="Disconnected"
                               Foreground="#F44747"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Mode Status (Top Center) -->
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                    <TextBlock Text="Mode: "
                               Foreground="#AAA"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="CurrentModeText"
                               Text="0 - Manual"
                               Foreground="#4EC9B0"
                               FontSize="14"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Video Status (Top Right) -->
                <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Video: "
                               Foreground="#AAA"
                               FontSize="14"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="VideoStatus"
                               Text="Off"
                               Foreground="#AAA"
                               FontSize="14"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Joystick Status (Bottom, Spanning all columns) -->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                    <TextBlock Text="Joystick: "
                               Foreground="#AAA"
                               FontSize="12"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="JoystickStatusText"
                               Text="Disabled"
                               Foreground="#AAA"
                               FontSize="12"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <TextBlock x:Name="JoystickDeviceText"
                               Text=""
                               Foreground="#888"
                               FontSize="11"
                               FontStyle="Italic"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3"
                Background="#007ACC"
                CornerRadius="5"
                Margin="0,10,0,0">
            <TextBlock x:Name="StatusMessage"
                       Text="Ready - Press any control key to start driving"
                       Foreground="White"
                       FontSize="12"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Padding="10,0"/>
        </Border>
    </Grid>
</Window>
